%p#notice= notice
%h2.list_title= @list.title
%p.list_sub_title= @list.description
#tasks_wrapper
  = render @list.tasks
  #form
    = render "tasks/form"
.links
  = link_to 'Edit', edit_list_path(@list) 
  |
  = link_to 'Delete', list_path(@list), method: :delete, data: { confirm: "Are you sure?" } 
  |
  = link_to 'Back', lists_path
